{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "${file}"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-scripts",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest - coverage",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "module": "pytest",
            "args": [
                "--cov-report",
                "html",
                "--cov=${fileDirname}/../",
                "-v",
                "${fileDirname}"
            ],
            "presentation": {
                "hidden": false,
                "group": "autoreduce-scripts",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            }
        },
    ]
}